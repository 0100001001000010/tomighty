<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.tomighty</groupId>
	<artifactId>tomighty</artifactId>
	<packaging>jar</packaging>
	<version>${version}-SNAPSHOT</version>
	<name>Tomighty</name>
	<url>http://code.google.com/p/tomighty/</url>
	
	<properties>
		<version>0.1</version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>com.akathist.maven.plugins.launch4j</groupId>
				<artifactId>launch4j-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>l4j-gui</id>
						<phase>package</phase>
						<goals>
							<goal>launch4j</goal>
						</goals>
						<configuration>
							<headerType>gui</headerType>
							<outfile>target/${artifactId}-${project.version}.exe</outfile>
							<jar>target/${artifactId}-${project.version}.jar</jar>
							<icon>img/tomato.ico</icon>
							<errTitle>Tomighty</errTitle>
							<jre>
								<minVersion>1.5.0</minVersion>
							</jre>
							<versionInfo>
								<fileVersion>${version}.0.0</fileVersion>
								<txtFileVersion>${version}.0.0</txtFileVersion>
								<fileDescription>Desktop timer for the Pomodoro Technique users</fileDescription>
								<copyright>Copyright 2010 Celio Cidral Junior</copyright>
								<productVersion>${version}.0.0</productVersion>
								<txtProductVersion>${version}.0.0</txtProductVersion>
								<productName>${project.name}</productName>
								<internalName>${artifactId}</internalName>
								<originalFilename>${artifactId}-${project.version}.exe</originalFilename>
							</versionInfo>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.3.1</version>
				<configuration>
					<archive>
						<manifest>
							<mainClass>org.tomighty.Tomighty</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>akathist-repository</id>
			<name>Akathist Repository</name>
			<url>http://www.9stmaryrd.com/maven</url>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>akathist-repository</id>
			<name>Akathist Repository</name>
			<url>http://www.9stmaryrd.com/maven</url>
		</pluginRepository>
	</pluginRepositories>

</project>
